<p id="notice"><%= notice %></p>

<h1>一覧画面</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>作者</th>
      <th>ISBNコード</th>
      <th>貸出ステータス</th>
      <th>要約</th>
      <th>出版日</th>
      <th>改定日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= "#{book.title}" %></td>
        <td><%= "#{book.author}" %></td>
        <td><%= "#{book.isbn}" %></td>
        <td><%= "#{book.status}" %></td>
        <td><%= "#{book.summary.truncate(10)}" %></td>
        <td><%= "#{book.published}" %></td>
        <td><%= "#{book.modifiled}" %></td>

        <td><%= link_to '詳細表示', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: 'よろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

